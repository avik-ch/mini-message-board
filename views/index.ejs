<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Message Board</title>
  </head>
  <body>
    <% messages.forEach((message) => { %>
      <p><%= message.text %></p>
      <p><%= message.user %></p>
      <p><%= message.added %></p>
      <a href="/message/<%= message.id %>">
        See message details
      </a>
    <% }) %>
    <br>
    <a href="/new"><button>Add to the conversation</button></a>
  </body>
</html>
